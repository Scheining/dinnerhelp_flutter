# Supabase Edge Functions Local Development Environment Variables
# Copy this file to .env.local and fill in your values

# Stripe Configuration for Local Development
# Get this from running: stripe listen --forward-to http://localhost:54321/functions/v1/stripe-webhook
STRIPE_WEBHOOK_SECRET_LOCAL=whsec_your_local_webhook_secret_here

# Other Stripe keys (same as production but can use test mode keys)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key

# Mark as local development environment
IS_LOCAL_SUPABASE=true
ENVIRONMENT=development